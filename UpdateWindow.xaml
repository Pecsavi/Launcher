
<Controls:MetroWindow x:Class="Launcher.UpdateWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
                      Title="Update / Neue Programme verfügbar"
                      Height="400" Width="600"
                      WindowStartupLocation="CenterOwner"
                      ShowTitleBar="True"
                      GlowBrush="Orange"
                      xmlns:dialogs="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
                      dialogs:DialogParticipation.Register="{Binding RelativeSource={RelativeSource Self}}">


    <Grid Margin="10">
        <StackPanel>

            <!-- Oszlopcímek -->
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Program" Grid.Column="0" FontWeight="Bold"/>
                <TextBlock Text="Was ist neu" Grid.Column="1" FontWeight="Bold" Margin="10,0,0,0"/>
                <TextBlock Text="Installieren" Grid.Column="2" FontWeight="Bold" Margin="10,0,0,0"/>
            </Grid>

            <ItemsControl x:Name="UpdateItemsList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock Text="{Binding ProgramName}" Width="200"/>
                            <TextBlock Text="{Binding UpdateType}" Width="150" Margin="10,0,0,0"/>
                            <CheckBox Content=""
                       IsChecked="{Binding IsSelected}" Margin="10,0,0,0"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Button Content="Installieren"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0"
                    Width="120"
                   Click="InstallButton_Click"/>
        </StackPanel>
    </Grid>
   

</Controls:MetroWindow>
